{
  "version": 1,
  "title": "Next.js landing pages",
  "description": "An application for editing and rendering landing pages.",
  "deployments": [
    {
      "id": "studio",
      "type": "studio",
      "title": "Content Studio",
      "dir": "./studio",
      "provider": {
        "name": "netlify",
        "config": {
          "base": "studio",
          "cmd": "npm run build && cp ./netlify.toml dist",
          "dir": "studio/dist"
        }
      }
    },
    {
      "id": "web",
      "type": "web",
      "title": "Frontend",
      "dir": "./web",
      "requiredTokens": [
        {
          "role": "deploy-studio",
          "label": "GraphQL API Deployer"
        }
      ],
      "provider": {
        "name": "netlify",
        "config": {
          "cmd": "npm run build",
          "dir": "web/out"
        }
      }
    }
  ],
  "metadata": {
    "technologies": [
      {
        "id": "nextjs",
        "name": "Next.js",
        "url": "https://nextjs.org/"
      },
      {
        "id": "netlify",
        "name": "Netlify",
        "url": "https://www.netlify.com/"
      }
    ]
  }
}
